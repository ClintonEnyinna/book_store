<div class="container" style="max-width: 500px">
  <h4 class="text-center mt-5">Log In</h4>
  <%= form_for(:session, url: login_path) do |f| %>
    <div class="form-group">
      <%= f.label 'email:' %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label 'password:' %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>

    <div class="text-center">
      <%= f.submit 'Log in', class: 'btn btn-secondary mt-2 mb-3' %>
    </div>
    
  <% end %>
   <h6 class="mt-4">New User? Sign Up!<h6/>
   <span class="h6"><%= link_to "Buyer", new_buyer_path %></span> / <span class="h6"><%= link_to "Seller", new_seller_path %></span>.
  <br />
</div>