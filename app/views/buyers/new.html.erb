<%= form_for(@buyer) do |f| %>

  <% if @buyer.errors.any? %>
    <div>
      <ul>
        <% @buyer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name%>
  <br />

  <%= f.label :email %>
  <%= f.email_field :email%>
  <br />

  <%= f.label :address %>
  <%= f.text_field :address%>
  <br />

  <%= f.label :password %>
  <%= f.password_field :password%>
  <br />

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation%>
  <br />

  <%= f.submit %>
<% end %>