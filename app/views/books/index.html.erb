
<% if current_user.is_a?(Buyer)%>
  <%= form_tag books_path, method: :get do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", name: nil %>
    </p>
  <% end %>

  <% @books.each do |book|%>
    <li><%= book.title.upcase %> - <%= book.author.capitalize %></li>
  <% end %>
<% else %>
  <p>Registered Books</p>
  <% @registered_books.each do |book| %>
    <li><%= book.title.upcase %> - <%= book.author.capitalize %></li>
  <% end %>
  <p>Sold Books</p>
  <% @sold_books.each do |book| %>
    <li><%= book.title.upcase %> - <%= book.author.capitalize %></li>
  <% end %>
<% end %>